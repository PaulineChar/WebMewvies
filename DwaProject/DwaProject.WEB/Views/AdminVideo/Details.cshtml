@using DwaProject.WEB.Viewmodels;
@model DwaProject.WEB.Viewmodels.VMVideo

@{
    ViewData["Title"] = "Details";
    VMImage _image = ViewData["Image"] as VMImage;
}
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="Login">Mewvies</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link" asp-area="" asp-controller="AdminVideo" asp-action="Index">Videos</a>
                    <a class="nav-link" asp-area="" asp-controller="AdminCountry" asp-action="Index">Countries</a>
                    <a class="nav-link" asp-area="" asp-controller="AdminTag" asp-action="Index">Tags</a>
                    <a class="nav-link" asp-area="" asp-controller="AdminGenre" asp-action="Index">Genres</a>
                    <a class="nav-link" asp-area="" asp-controller="AdminUser" asp-action="Index">Users</a>
                </div>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <h1>Details</h1>

    <div>
        <h4>Video</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImageContent)
            </dt>
            <dd class="col-sm-10">
                <img src="data:image/png;base64,@_image!.Content" />
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.GenreName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.GenreId) : @Html.DisplayFor(model => model.GenreName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.TotalSeconds)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.TotalSeconds) s
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.StreamingUrl)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.StreamingUrl)
            </dd>
            
            
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Tags)
			</dt>
			<dd class="col-sm-10">
                @{
                    string display = "";
                    int i = 0;

                    @for (; i < Model.Tags.Length - 1; i++)
                    {
                        display += Model.Tags[i] + ", ";
                    }
                    display += Model.Tags[i];
                }
                @display
			</dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("Edit", "Edit", new { id=Model.Id }, new { @class="btn btn-info"}) |
        @Html.ActionLink("Delete", "Delete", new {id=Model.Id }, new { @class="btn btn-danger"}) |
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>
</div>