@using DwaProject.WEB.Viewmodels;
@model IEnumerable<DwaProject.WEB.Viewmodels.VMGenre>

@{
    ViewData["Title"] = "Index";
    VMFilter _filter = ViewData["Filter"] as VMFilter;
}

<label>Page:</label>
<br />
<div class="btn-group" id="page-body">
    @for (var i = 1; i <= _filter!.TotalPages; i++)
    {
        var currClass = _filter.Page == i ? "btn-primary" : "btn-outline-primary";
        <a asp-action="Index"
           data-page="@i"
           class="pager-btn btn @currClass">@i</a>
    }
</div>

<br />

<h1>Genres</h1>

<br />
<p>
    <a class="btn btn-info create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="genre-table-body">
        <partial name="_GenreTableBodyPartial" />
    </tbody>
</table>

<p>
    <a class="btn btn-info create">Create New</a>
</p>
